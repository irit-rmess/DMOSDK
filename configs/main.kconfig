menu "Global configuration"
    choice
        prompt "Board selection"
        config BOARD_DWM1001_DEV
            bool "DWM1001-DEV"
            help
                Decawave's DWM1001 development board
    endchoice
    config BOARD
        string
        default DWM1001-DEV if BOARD_DWM1001_DEV
    config SERIAL
        select NRFX_UART_ENABLED
        select NRFX_UART0_ENABLED
        bool "Serial"
    config LOGGER
        select NRFX_CLOCK_ENABLED
        select NRFX_CLOCK_CONFIG_LF_SRC_1
        select NRFX_RTC_ENABLED
        select NRFX_RTC0_ENABLED
        bool "Logger"
    config COMMANDS
        bool "Commands"
    config CONFIG_SECTION
        select NRFX_NVMC_ENABLED
        bool "Config section"
    menu "Configuration"
        depends on CONFIG_SECTION
        config CONFIG_SECTION_SIZE
            hex "Size"
                default 0x1000
    endmenu
endmenu
